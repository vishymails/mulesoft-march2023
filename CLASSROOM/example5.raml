#%RAML 1.0
title: day1


types:
  CGICustomNews : !include schemas/newsdataType.raml

/search :
  get:
    queryParameters :
      keyword :
        description: this is the query param which the request is accepted 
        type: string
        minLength: 3
        maxLength: 10
    responses :
      200 :
        body:
          application/json:
            example : !include examples/searchExample.raml
              
  
/news :
  post :
    queryParameters:
      country : 
        required: false
    
    body:
      application/json:
        type : CGICustomNews
    responses :
      201 :
        body:
          application/json:
            example : !include examples/searchExample.raml


/sportsNews :
  put :
    body :
      application/json :
        type : CGICustomNews


        
